---
interface Props {
  heading: string;
  description: string;
  buttons?: {
    text: string;
    href: string;
  }[];
}

const { heading, description, buttons } = Astro.props;
---

<div class="bg-mariner-700">
  <div class="px-6 py-24 sm:py-32 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="title-bright">
        {heading}
      </h2>
      <p class="mx-auto mt-6 max-w-xl text-lg/7 text-pretty text-mariner-200">
        {description}
      </p>
      {
        buttons && (
          <div class="mt-10 flex items-center justify-center gap-x-6">
            {buttons.map((button, index) => (
              <a
                href={button.href}
                class={`${index % 2 === 0 ? "btn-transparent" : "btn-transparent-2"}`}
              >
                {button.text}
              </a>
            ))}
          </div>
        )
      }
    </div>
  </div>
  ) }
</div>
