---
interface CaseStudyCardProps {
  data: {
    logo: string;
    client: string;
    title: string;
    image: string;
    quote?: string;
    description?: string;
    video?: string;
    slug: string;
  };
}

const { data } = Astro.props;

import { ChevronRightIcon } from "@heroicons/react/24/solid";
import ImageComp from "./ImageComp.astro";
import { PlayCircleIcon } from "@heroicons/react/20/solid";
---

<a class="block group" href={`/case-studies/${data.slug}`} title={data.title}>
  <article
    class="relative min-h-[600px] flex flex-col justify-between bg-white rounded-sm md:rounded-xl shadow-sm hover:-translate-y-1 hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-200 group-hover:border-mariner-300"
  >
    <!-- Logo Section -->
    <div
      class="p-8 flex items-center justify-center h-32 w-full border-b border-gray-100"
    >
      <ImageComp
        src={data.logo}
        alt={`${data.client} logo`}
        class="object-contain w-full h-full opacity-70 group-hover:opacity-100 transition-opacity duration-300"
      />
    </div>

    <!-- Content -->
    <div class="p-8">
      <h3
        class="text-2xl font-bold text-gray-900 mb-2 group-hover:text-mariner-600 transition-colors"
      >
        {data.title}
        <ChevronRightIcon
          className="w-4 h-4 inline-block ml-2 text-mariner-600 transition-transform duration-300 group-hover:translate-x-1"
        />
      </h3>

      {data.client && <p class="text-sm text-gray-500 mb-6">{data.client}</p>}
    </div>

    <!-- Image Preview -->
    <div class="relative px-8 pb-8">
      <div class="relative rounded-lg overflow-hidden">
        <div
          class="absolute inset-0 bg-linear-to-t from-black/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-10 flex items-center justify-center"
        >
          <PlayCircleIcon className="w-14 h-14 text-white drop-shadow-lg" />
        </div>

        <img
          src={data.image}
          alt={`${data.title} preview`}
          class="w-full h-auto object-cover object-center aspect-video"
        />
      </div>
    </div>
  </article>
</a>
