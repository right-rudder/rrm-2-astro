---
interface Testimonial {
  quote: string;
  author: string;
  role?: string;
  rating?: number;
}

interface Props {
  testimonials: Testimonial[];
}

const { testimonials } = Astro.props;
---

<section class="py-16 md:py-24 bg-gray-900 text-white">
  <div class="max-w-7xl mx-auto px-5 md:px-8 lg:px-12">
    <!-- Section Header -->
    <div class="text-center mb-12 md:mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">
        Don't Take Our Word For It
      </h2>
      <p class="text-lg md:text-xl text-gray-300 max-w-3xl mx-auto">
        Hear from the pilots who successfully transitioned from military to airline careers
      </p>
    </div>

    <!-- Testimonials Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {testimonials.map((testimonial) => (
        <div class="bg-gray-800 rounded-lg p-8 hover:bg-gray-750 transition-colors duration-300">
          <!-- Rating -->
          {testimonial.rating && (
            <div class="flex gap-1 mb-4">
              {Array.from({ length: testimonial.rating }).map(() => (
                <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
              ))}
            </div>
          )}

          <!-- Quote -->
          <blockquote class="text-gray-100 text-lg mb-6 leading-relaxed">
            "{testimonial.quote}"
          </blockquote>

          <!-- Author -->
          <div class="border-t border-gray-700 pt-4">
            <div class="font-semibold text-white">
              {testimonial.author}
            </div>
            {testimonial.role && (
              <div class="text-sm text-gray-400">
                {testimonial.role}
              </div>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
