---
import { PHONE_NUMBER, EMAIL_ADDRESS } from "../data/consts";
import ImageComp from "./ImageComp.astro";

interface Props {
  title: string;
  description: string;
  image?: {
    src: string;
    alt: string;
  };
  primaryCTA: {
    text: string;
    href: string;
  };
  secondaryCTA?: {
    text: string;
    href: string;
  };
}

const { title, description, primaryCTA, secondaryCTA } = Astro.props;
---

<section class="relative py-16 md:py-24 text-white">
  <div class="absolute inset-0 bg-white/70 -z-10"></div>
  <ImageComp
    src={Astro.props.image?.src ||
      "/src/assets/avel-chuklanov-ZEiqbaQhmvE-unsplash.jpg"}
    alt={Astro.props.image?.alt || "Call to action background"}
    class="absolute inset-0 w-full h-full object-cover -z-20"
  />
  <div class="max-w-5xl mx-auto px-5 md:px-8 lg:px-12 text-center">
    <!-- Main Content -->
    <h2 class="title mb-4 md:mb-6">
      {title}
    </h2>

    <p
      class="text-lg md:text-xl text-muted-900 mb-8 max-w-3xl mx-auto leading-tight"
    >
      {description}
    </p>

    <!-- CTAs -->
    <div
      class="flex flex-col sm:flex-row gap-4 justify-center items-center font-ubuntu mb-8"
    >
      <a href={primaryCTA.href} class="btn-primary">
        {primaryCTA.text}
      </a>

      {
        secondaryCTA && (
          <a href={secondaryCTA.href} class="btn-transparent">
            {secondaryCTA.text}
          </a>
        )
      }
    </div>

    <!-- Contact Info -->
    <div
      class="flex flex-col sm:flex-row gap-6 justify-center items-center font-ubuntu text-black text-sm"
    >
      <a
        href={`tel:${PHONE_NUMBER}`}
        class="flex items-center gap-2 hover:text-white transition-colors"
      >
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
          ></path>
        </svg>
        {PHONE_NUMBER}
      </a>
      <span class="hidden sm:block text-primary-300">|</span>
      <a
        href={`mailto:${EMAIL_ADDRESS}`}
        class="flex items-center gap-2 hover:text-white transition-colors"
      >
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
          ></path>
        </svg>
        {EMAIL_ADDRESS}
      </a>
    </div>
  </div>
</section>
