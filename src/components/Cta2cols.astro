---
interface Props {
  img: {
    src: string;
    alt: string;
  };
  cta: {
    heading: string;
    description: string;
    btnText: string;
    btnHref: string;
  };
  list?: string[];
}

const { img, cta, list } = Astro.props;

import ImageComp from "./ImageComp.astro";
---

<div class="overflow-hidden bg-white py-24 sm:py-32">
  <div class="relative isolate">
    <div class="mx-auto max-w-7xl sm:px-6 lg:px-8">
      <div
        class="mx-auto flex max-w-2xl flex-col gap-16 bg-white/75 px-6 shadow-lg ring-1 ring-gray-900/5 sm:rounded-3xl sm:p-8 lg:mx-0 lg:max-w-none lg:flex-row lg:items-center xl:gap-x-20 xl:px-20"
      >
        <ImageComp
          src={img.src}
          alt={img.alt}
          class="h-96 w-full flex-none rounded-2xl object-cover lg:h-136 lg:max-w-sm"
        />
        <div class="w-full flex-auto pb-16 lg:py-12 px-3 lg:pr-12 lg:pl-6">
          <h2
            class="text-4xl font-semibold tracking-tight text-pretty text-gray-950 sm:text-5xl"
          >
            {cta.heading}
          </h2>
          <p
            class="mt-6 text-lg/8 text-pretty text-gray-600"
            set:html={cta.description}
          />
          {
            list && (
              <ul
                role="list"
                class="mt-6 grid grid-cols-1 gap-2 text-base/5 text-gray-800 italic sm:grid-cols-2"
              >
                {list.map((item) => (
                  <li class="flex gap-x-3 justify-center group bg-white/30 items-center shadow-2xs ring-1 ring-gray-300 hover:bg-white hover:shadow-xl rounded-sm py-3 px-2 duration-200">
                    <svg
                      viewBox="0 0 20 20"
                      fill="currentColor"
                      data-slot="icon"
                      aria-hidden="true"
                      class="size-7 flex-none text-mariner-700 group-hover:text-mariner-300 duration-300"
                    >
                      <path
                        d="M10 18a8 8 0 1 0 0-16 8 8 0 0 0 0 16Zm3.857-9.809a.75.75 0 0 0-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 1 0-1.06 1.061l2.5 2.5a.75.75 0 0 0 1.137-.089l4-5.5Z"
                        clip-rule="evenodd"
                        fill-rule="evenodd"
                      />
                    </svg>
                    {item}
                  </li>
                ))}
              </ul>
            )
          }
          <div class="mt-10 flex justify-center lg:justify-start">
            <a href={cta.btnHref} class="btn-primary">
              {cta.btnText}
            </a>
          </div>
        </div>
      </div>
    </div>
    <div
      aria-hidden="true"
      class="absolute inset-x-0 -top-16 -z-10 flex transform-gpu justify-center overflow-hidden blur-3xl"
    >
      <div
        style="clip-path: polygon(73.6% 51.7%, 91.7% 11.8%, 100% 46.4%, 97.4% 82.2%, 92.5% 84.9%, 75.7% 64%, 55.3% 47.5%, 46.5% 49.4%, 45% 62.9%, 50.3% 87.2%, 21.3% 64.1%, 0.1% 100%, 5.4% 51.1%, 21.4% 63.9%, 58.9% 0.2%, 73.6% 51.7%)"
        class="aspect-1318/752 w-329.5 flex-none bg-linear-to-r from-[#9fd6fc] to-mariner-900 opacity-50"
      >
      </div>
    </div>
  </div>
</div>
