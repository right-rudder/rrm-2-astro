---
interface Step {
  number: number;
  title: string;
  description: string;
}

interface Props {
  title: string;
  subtitle?: string;
  steps: Step[];
}

const { title, subtitle, steps } = Astro.props;
---

<section class="py-16 md:py-24 bg-gray-50">
  <div class="max-w-7xl mx-auto px-5 md:px-8 lg:px-12">
    <!-- Section Header -->
    <div class="text-center mb-12 md:mb-16">
      <h2 class="title">
        {title}
      </h2>
      {subtitle && <p class="subtitle">{subtitle}</p>}
    </div>

    <!-- Steps -->
    <div class="relative">
      <!-- Connection Line (Desktop) -->
      <div
        class="hidden lg:block absolute top-16 left-0 right-0 h-1 bg-primary-200"
        aria-hidden="true"
      >
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {
          steps.map((step, index) => (
            <div class="relative">
              {/* Step Card */}
              <div class="bg-white flex flex-col justify-left items-center rounded-lg p-8 shadow-md transition ease-out duration-200 h-full hover:scale-105 hover:shadow-2xl hover:-translate-y-5">
                {/* Step Number */}
                <div class="relative inline-flex items-center justify-center w-20 h-20 bg-mariner-600 text-white text-5xl font-bold rounded-full mb-6 shadow-lg">
                  {step.number}
                </div>

                {/* Step Title */}
                <h3 class="text-3xl text-center font-title font-bold text-muted-600 mb-3">
                  {step.title}
                </h3>

                {/* Step Description */}
                <p class="text-muted-700 text-center leading-relaxed">
                  {step.description}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
