---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import type { GetStaticPaths } from "astro";
import type { CollectionEntry } from "astro:content";
import { PHONE_NUMBER } from "../../data/consts";
import Hero75 from "../../components/Hero75.astro";

export const getStaticPaths = (async () => {
  const programs = await getCollection("programs");
  return programs.map((program: CollectionEntry<"programs">) => ({
    params: { slug: program.slug },
    props: { program },
  }));
}) satisfies GetStaticPaths;

type Props = {
  program: CollectionEntry<"programs">;
};

const { program } = Astro.props as Props;
const { Content } = await program.render();

const heroData = {
  image: {
    src: program.data.image,
    alt: program.data.title,
  },
  title: program.data.title,
  subTitle: program.data.description,
  cta: [
    {
      url: "/enroll",
      text: "Enroll Now",
    },
  ],
};
---

<BaseLayout
  siteTitle={`${program.data.title} | Right Rudder Marketing Aviation Academy`}
  siteDescription={program.data.description}
  siteImage={program.data.image}
>
  <Hero75 data={heroData} />
  <article class="py-16 px-4">
    <div class="max-w-5xl mx-auto">
      <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="p-8 md:p-12">
          {
            program.data.highlights && program.data.highlights.length > 0 && (
              <div class="mb-8">
                <h2 class="text-3xl font-title font-bold mb-4">
                  Program Highlights
                </h2>
                <ul class="grid grid-cols-1 md:grid-cols-2 gap-3">
                  {program.data.highlights.map((highlight: string) => (
                    <li class="flex items-start">
                      <span class="text-mariner-600 mr-3 text-xl">✓</span>
                      <span class="text-gray-700">{highlight}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )
          }

          <p class="text-xl text-gray-600 mb-8">{program.data.description}</p>

          <div class="flex flex-wrap justify-center gap-6 mb-8 pb-8 border-b">
            <div class="bg-muted-50 text-center px-6 py-4 rounded-lg">
              <div class="text-sm text-gray-600 mb-1">Duration</div>
              <div class="text-xl font-bold text-mariner-600">
                {program.data.duration}
              </div>
            </div>
            {
              program.data.cost && (
                <div class="bg-muted-50 text-center px-6 py-4 rounded-lg">
                  <div class="text-sm text-gray-600 mb-1">Investment</div>
                  <div class="text-xl font-bold text-mariner-600">
                    {program.data.cost}
                  </div>
                </div>
              )
            }
          </div>

          {
            program.data.requirements &&
              program.data.requirements.length > 0 && (
                <div class="mb-8">
                  <h2 class="text-3xl font-title font-bold mb-4">
                    Requirements
                  </h2>
                  <ul class="space-y-2">
                    {program.data.requirements.map((req: string) => (
                      <li class="flex items-start">
                        <span class="text-blue-600 mr-3">•</span>
                        <span class="text-gray-700">{req}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              )
          }

          <div
            class="prose max-w-none mt-8 prose-h2:text-3xl prose-h2:font-title prose-h3:text-xl prose-a:text-mariner-600 prose-a:underline prose-a:hover:text-muted-800"
          >
            <Content />
          </div>

          <div class="mt-12 pt-8 border-t">
            <h2 class="text-2xl font-bold mb-4">Ready to Get Started?</h2>
            <p class="text-gray-600 mb-6">
              Contact us today to learn more about this program and how we can
              help you achieve your aviation goals.
            </p>
            <div class="flex flex-wrap gap-4">
              <a
                href="/contact"
                class="inline-block bg-mariner-600 text-white px-8 py-3 rounded-lg hover:bg-mariner-700 transition-colors"
              >
                Contact Us
              </a>
              <a
                href="/programs"
                class="inline-block bg-gray-200 text-gray-800 px-8 py-3 rounded-lg hover:bg-gray-300 transition-colors"
              >
                View All Programs
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </article>
</BaseLayout>
