---
import BaseLayout from "../layouts/BaseLayout.astro";
import {
  EMAIL_ADDRESS,
  PHONE_NUMBER,
  ADDRESS_LINE_1,
  ADDRESS_LINE_2,
  SITE_DESCRIPTION,
} from "../data/consts";
---

<BaseLayout
  siteTitle="Schedule a Growth Accelerator Session | Flight School and Aviation Business Marketing"
  siteDescription="Book a free consultation with Right Rudder Marketing to grow your flight school. Our proven digital marketing strategies increase student enrollments. Schedule a call now to dominate your local market"
  keywords="flight school marketing, digital marketing for flight schools, schedule a consultation, increase student enrollments, flight school SEO, PPC for flight schools, grow flight school business"
>
  <div class="h-20 lg:h-28 w-full bg-mariner-600 brightness-75"></div>

  <section class="relative isolate bg-white">
    <div class="mx-auto grid max-w-7xl grid-cols-1 lg:grid-cols-2">
      <div class="relative px-6 pb-20 lg:static lg:px-8 py-10">
        <div class="mx-auto max-w-xl lg:mx-0 lg:max-w-lg">
          <div
            class="w-full overflow-hidden rounded-xl aspect-9/16 bg-gray-900 shadow-lg ring-1 ring-gray-900/10"
          >
            <iframe
              class="w-full h-full mx-auto aspect-9/16"
              src="https://www.youtube.com/embed/lLDXjJSuI90?autoplay=1&mute=1"
              title="YouTube video player"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              referrerpolicy="strict-origin-when-cross-origin"
              allowfullscreen
            >
            </iframe>
          </div>
        </div>
      </div>
      <div class="bg-white max-w-lg grid place-items-center lg:ml-16">
        <iframe
          class="w-full my-12 lg:mt-36 h-full overflow-hidden"
          src="https://msg.flightschoolcrm.com/widget/booking/UsFmB7RVJOH9u8PnqAoQ"
          scrolling="no"
          id="UsFmB7RVJOH9u8PnqAoQ_1708416759290"></iframe>
        <script
          src="https://msg.flightschoolcrm.com/js/form_embed.js"
          type="text/javascript"></script>
      </div>
    </div>
  </section>

  <section class="grid place-items-center py-20 bg-gray-100 px-6 lg:px-8">
    <div class="max-w-2xl">
      <h1 class="title">Schedule a Growth Accelerator Session</h1>
      <p class="mt-6 text-lg leading-8 text-gray-600">
        {SITE_DESCRIPTION}
      </p>
      <p class="mt-2 text-lg leading-8 text-gray-600">
        We would love to hear from you. Please find an available time slot and
        we will be in touch.
      </p>
      <dl class="mt-10 space-y-4 text-base leading-7 text-gray-600">
        <div class="flex gap-x-4">
          <dt class="flex-none">
            <span class="sr-only">Address</span>
            <svg
              class="h-7 w-6 text-gray-400"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M2.25 21h19.5m-18-18v18m10.5-18v18m6-13.5V21M6.75 6.75h.75m-.75 3h.75m-.75 3h.75m3-6h.75m-.75 3h.75m-.75 3h.75M6.75 21v-3.375c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21M3 3h12m-.75 4.5H21m-3.75 3.75h.008v.008h-.008v-.008zm0 3h.008v.008h-.008v-.008zm0 3h.008v.008h-.008v-.008z"
              ></path>
            </svg>
          </dt>
          <dd>{ADDRESS_LINE_1}<br />{ADDRESS_LINE_2}</dd>
        </div>
        <div class="flex gap-x-4">
          <dt class="flex-none">
            <span class="sr-only">Telephone</span>
            <svg
              class="h-7 w-6 text-gray-400"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
              ></path>
            </svg>
          </dt>
          <dd>
            <a class="hover:text-gray-900" href={`tel:${PHONE_NUMBER}`}
              >{PHONE_NUMBER}</a
            >
          </dd>
        </div>
        <div class="flex gap-x-4">
          <dt class="flex-none">
            <span class="sr-only">Email</span>
            <svg
              class="h-7 w-6 text-gray-400"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
              ></path>
            </svg>
          </dt>
          <dd>
            <a class="hover:text-gray-900" href={`mailto:${EMAIL_ADDRESS}`}
              >{EMAIL_ADDRESS}</a
            >
          </dd>
        </div>
      </dl>
    </div>
  </section>
</BaseLayout>
