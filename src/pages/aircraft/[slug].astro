---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import type { GetStaticPaths } from "astro";
import type { CollectionEntry } from "astro:content";

export const getStaticPaths = (async () => {
  const aircraft = await getCollection("aircraft");
  return aircraft.map((plane: CollectionEntry<"aircraft">) => ({
    params: { slug: plane.slug },
    props: { plane },
  }));
}) satisfies GetStaticPaths;

type Props = {
  plane: CollectionEntry<"aircraft">;
};

const { plane } = Astro.props as Props;
const { Content } = await plane.render();
---

<BaseLayout
  siteTitle={`${plane.data.name} | M2A Aviation Academy`}
  siteDescription={plane.data.description}
  siteImage={plane.data.image}
>
  <article class="py-16 px-4">
    <div class="max-w-5xl mx-auto">
      <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <img
          src={plane.data.image}
          alt={plane.data.name}
          class="w-full h-96 object-cover"
        />
        <div class="p-8 md:p-12">
          <h1 class="text-4xl md:text-5xl font-bold mb-2">{plane.data.name}</h1>
          <p class="text-2xl text-blue-600 mb-6">{plane.data.model}</p>

          {
            plane.data.tailNumber && (
              <div class="mb-6">
                <span class="inline-block bg-blue-50 px-4 py-2 rounded-lg">
                  <span class="text-sm text-gray-600">Tail Number:</span>
                  <span class="ml-2 font-semibold">
                    {plane.data.tailNumber}
                  </span>
                </span>
              </div>
            )
          }

          <p class="text-xl text-gray-700 mb-8">{plane.data.description}</p>

          {
            plane.data.specifications && (
              <div class="mb-8">
                <h2 class="text-2xl font-bold mb-4">Specifications</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  {plane.data.specifications.engines && (
                    <div class="bg-gray-50 p-4 rounded-lg">
                      <div class="text-sm text-gray-600 mb-1">Engine</div>
                      <div class="font-semibold">
                        {plane.data.specifications.engines}
                      </div>
                    </div>
                  )}
                  {plane.data.specifications.seats && (
                    <div class="bg-gray-50 p-4 rounded-lg">
                      <div class="text-sm text-gray-600 mb-1">Seating</div>
                      <div class="font-semibold">
                        {plane.data.specifications.seats} seats
                      </div>
                    </div>
                  )}
                  {plane.data.specifications.range && (
                    <div class="bg-gray-50 p-4 rounded-lg">
                      <div class="text-sm text-gray-600 mb-1">Range</div>
                      <div class="font-semibold">
                        {plane.data.specifications.range}
                      </div>
                    </div>
                  )}
                  {plane.data.specifications.cruiseSpeed && (
                    <div class="bg-gray-50 p-4 rounded-lg">
                      <div class="text-sm text-gray-600 mb-1">Cruise Speed</div>
                      <div class="font-semibold">
                        {plane.data.specifications.cruiseSpeed}
                      </div>
                    </div>
                  )}
                </div>
              </div>
            )
          }

          {
            plane.data.features && plane.data.features.length > 0 && (
              <div class="mb-8">
                <h2 class="text-2xl font-bold mb-4">Features</h2>
                <ul class="grid grid-cols-1 md:grid-cols-2 gap-3">
                  {plane.data.features.map((feature: string) => (
                    <li class="flex items-start">
                      <span class="text-blue-600 mr-3 text-xl">âœ“</span>
                      <span class="text-gray-700">{feature}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )
          }

          <div class="prose max-w-none mt-8">
            <Content />
          </div>

          <div class="mt-12 pt-8 border-t">
            <h2 class="text-2xl font-bold mb-4">Interested in Training?</h2>
            <p class="text-gray-600 mb-6">
              Contact us to schedule a discovery flight or learn more about
              training in this aircraft.
            </p>
            <div class="flex flex-wrap gap-4">
              <a
                href="/contact"
                class="inline-block bg-blue-600 text-white px-8 py-3 rounded-lg hover:bg-blue-700 transition-colors"
              >
                Contact Us
              </a>
              <a
                href="/aircraft"
                class="inline-block bg-gray-200 text-gray-800 px-8 py-3 rounded-lg hover:bg-gray-300 transition-colors"
              >
                View All Aircraft
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </article>
</BaseLayout>
