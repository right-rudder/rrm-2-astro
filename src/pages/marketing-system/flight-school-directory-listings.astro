import BaseLayout from "../../layouts/BaseLayout.astro";
import Content from "../../components/Content.astro";
import {
  generateKeywords,
  AVIATION_KEYWORDS,
  TARGET_LOCATIONS,
  generateFAQSchema,
  generateBreadcrumbSchema,
