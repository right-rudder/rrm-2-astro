  [
    ...AVIATION_KEYWORDS.primary.slice(0, 5),
    "flight school directories",
    "aviation listings",
    "flight training directories",
    "pilot school citations",
    "aviation business directories",
    "local citations",
    "flight school listings",
    "aviation directory management",
  ],
  TARGET_LOCATIONS.slice(0, 10),
  [
    "directory listing management",
    "flight school citation building",
    "aviation directory services",
    "local SEO citations",
    "business listing optimization",
  ],
);

