---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Content from "../../components/Content.astro";
import {
  generateKeywords,
  AVIATION_KEYWORDS,
  TARGET_LOCATIONS,
  generateFAQSchema,
  generateBreadcrumbSchema,
} from "../../utils/seo";
import HeroScreen from "@/components/HeroScreen.astro";
import Cta2Cols from "@/components/Cta2cols.astro";
import CtaSimpleCenter from "@/components/CtaSimpleCenter.astro";
import { YouTube } from "astro-embed";

const pageTitle = "Flight School Content Production | Right Rudder Marketing";

const pageDescription =
  "SEO is the process of optimizing your website to rank higher on search engines like Google. We help flight schools and aviation businesses get more leads and students. Schedule a call now!";

const pageKeywords =
  "SEO, search engine optimization, flight school marketing, aviation marketing, pilot training marketing, flight school leads, aviation leads, pilot training leads, flight school students, aviation students, pilot training students";

// Enhanced SEO keyword generation
const enhancedKeywords = generateKeywords(
  [
    ...AVIATION_KEYWORDS.primary.slice(0, 5),
    "flight school SEO",
    "aviation SEO",
    "pilot school SEO",
    "flight training SEO",
    "aviation academy SEO",
    "flight school website SEO",
    "pilot training website SEO",
    "aviation academy website SEO",
    "flight school marketing website SEO",
  ],
  TARGET_LOCATIONS.slice(0, 10), // Use top 10 target locations
  [
    "flight school SEO services",
    "aviation SEO services",
    "flight school marketing website SEO",
    "pilot training website SEO",
    "aviation academy website SEO",
  ],
);

// FAQ schema for web design services
const faqData = [
  {
    question:
      "What makes a flight school website different from other websites?",
    answer:
      "Flight school websites need specialized features like aircraft fleet showcases, instructor profiles, course catalogs, online scheduling, and aviation-specific SEO optimization to attract pilot students.",
  },
  {
    question: "How long does it take to build a flight school website?",
    answer:
      "A professional flight school website typically takes 3-4 weeks to design and develop, depending on the complexity of features like online booking systems and custom integrations.",
  },
  {
    question: "Do you provide SEO services for flight school websites?",
    answer:
      "Yes, we specialize in aviation SEO to help flight schools rank higher in search results for keywords like 'flight training near me' and 'pilot school' in their local area.",
  },
  {
    question:
      "Can you integrate online scheduling into our flight school website?",
    answer:
      "Absolutely! We can integrate flight scheduling systems, aircraft booking, and instructor calendar management directly into your website for a seamless student experience.",
  },
];

// Breadcrumb navigation
const breadcrumbs = [
  { name: "Home", url: "/" },
  { name: "Services", url: "/services" },
  { name: "Video Production", url: "/flight-school-video-production" },
];

const faqSchema = generateFAQSchema(faqData);
const breadcrumbSchema = generateBreadcrumbSchema(breadcrumbs);

const heroData = {
  image: {
    src: "/src/assets/tadeu-jnr-kAzSa_azENM-unsplash.webp",
    alt: "Right Rudder Marketing Flight School Video Production",
  },
  videoSrc:
    "https://cdn.jsdelivr.net/gh/right-rudder/rrm-2-astro@1ee9680d79789787392bbd71ab8b758463e3042d/rrm-hero-video-720.mp4",
  videoSrcVertical:
    "https://cdn.jsdelivr.net/gh/right-rudder/rrm-2-astro@ce55ca87cbc72ba4178d826badcc68d6b68677b7/rrm-home-hero-vertical.mp4",
  uppertitle: "Show don't tell",
  title: "Flight School Content Production",
  subTitle:
    "Engage potential students with high-quality video content that showcases your flight school's unique offerings and training environment. From promotional videos to student testimonials, our video production services help you tell your story and attract more aspiring pilots.",
};
---

<BaseLayout
  siteTitle={pageTitle}
  siteDescription={pageDescription}
  keywords={enhancedKeywords}
>
  <!-- Schema markup for enhanced SEO -->
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  <script
    type="application/ld+json"
    set:html={JSON.stringify(breadcrumbSchema)}
  />

  <!-- HEADER -->
  <HeroScreen data={heroData} />

  <section class="py-20 bg-white">
    <div class="flex flex-col items-center w-full text-center">
      <h2 class="title">Build authority with video content</h2>
      <div class="pt-10 px-5">
        <p id="videos" class="lg:text-base italic pb-10 max-w-4xl">
          Grab attention fast with dynamic, high-impact videos designed for
          platforms like Instagram, TikTok, and YouTube Shorts. These quick
          clips highlight key moments, spark interest, and increase
          engagement—perfect for showcasing student experiences, aircraft tours,
          and day-to-day flight operations.
        </p>
      </div>
      <!--Videos-->
      <div class="mx-auto max-w-5xl flex justify-around flex-wrap gap-7">
        <div class="w-full md:w-[48%] lg:w-[31%]">
          <iframe
            width="100%"
            height="560"
            src="https://youtube.com/embed/vUymKew8OL8"
            title="YouTube video player"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen></iframe>
        </div>
        <div class="w-full md:w-[48%] lg:w-[31%]">
          <iframe
            width="100%"
            height="560"
            src="https://youtube.com/embed/LJgemZT1BYw?si=ewGzLCsoEMM7HcLN"
            title="YouTube video player"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen></iframe>
        </div>
        <div class="w-full md:w-[48%] lg:w-[31%]">
          <iframe
            width="100%"
            height="560"
            src="https://youtube.com/embed/Y45PkvC9cZc?feature=share"
            title="YouTube video player"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen></iframe>
        </div>
        <div class="w-full md:w-[48%] lg:w-[31%]">
          <iframe
            width="100%"
            height="560"
            src="https://www.youtube.com/embed/cCYPVjoWXGI?si=o5QyPx10sHvys9aL"
            title="YouTube video player"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen></iframe>
        </div>
        <div class="w-full md:w-[48%] lg:w-[31%]">
          <iframe
            width="100%"
            height="560"
            src="https://youtube.com/embed/w6gjX5R9uhI?feature=share"
            title="YouTube video player"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen></iframe>
        </div>
        <div class="w-full md:w-[48%] lg:w-[31%]">
          <iframe
            width="100%"
            height="560"
            src="https://www.youtube.com/embed/u0munm2PtUY?si=RcG9i4OAdnYVp2sM"
            title="YouTube video player"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen></iframe>
        </div>
      </div>

      <div class="pt-10 px-5">
        <h3 class="my-3 lg:my-6 text-xl lg:text-3xl font-normal">
          Long form content for flight schools
        </h3>
        <p class="text-base italic pb-10 max-w-4xl">
          Tell your story with in-depth, professionally crafted videos designed
          for your website and YouTube. From instructor interviews to training
          overviews, these videos provide valuable insights that help potential
          students connect with your brand and make informed decisions.
        </p>
      </div>
      <!--Videos-->
      <div
        class="flex flex-col lg:flex-row items-center justify-center gap-10 w-full flex-wrap"
      >
        <div class="lg:w-5/12 w-full flex justify-center">
          <YouTube posterQuality="max" id="QaK-0sfCnCc" class="w-full h-auto" />
        </div>
        <div class="lg:w-5/12 w-full flex justify-center">
          <YouTube posterQuality="max" id="yEZTEqF8_q4" class="w-full h-auto" />
        </div>
        <div class="lg:w-5/12 w-full flex justify-center">
          <YouTube posterQuality="max" id="BNpWgJMFfhU" class="w-full h-auto" />
        </div>
        <div class="lg:w-5/12 w-full flex justify-center">
          <YouTube posterQuality="max" id="4U0UEYHOPgo" class="w-full h-auto" />
        </div>
        <div class="lg:w-5/12 w-full flex justify-center">
          <YouTube posterQuality="max" id="WREHKs4juIM" class="w-full h-auto" />
        </div>
        <div class="lg:w-5/12 w-full flex justify-center">
          <YouTube posterQuality="max" id="mAOuSIRejAY" class="w-full h-auto" />
        </div>
      </div>
    </div>
  </section>

  <CtaSimpleCenter
    heading="Do you have the right keywords for your market?"
    description="Unlock the potential of your flight school with targeted keywords that attract the right students. Our Free Keyword Research Guide reveals the top keywords specific to your local market, helping you optimize your website and advertising campaigns for maximum visibility and enrollment growth."
    buttons={[
      {
        text: "Download the Guide",
        href: "/resources/flight-school-keyword-research-guide",
      },
    ]}
  />

  <Cta2Cols
    img={{
      src: "/src/assets/mael-balland-QRQHIYyIlp8-unsplash.jpg",
      alt: "Instrument panel of a small aircraft",
    }}
    cta={{
      heading: "Is your website optimize for SEO?",
      description: `Technical SEO is the foundation for higher search rankings. <strong>Our Website & SEO Performance Checklist</strong> ensures your flight school website is fully optimized to rank higher on Google and attract more student pilots.`,
      btnText: "Download our SEO Checklist",
      btnHref: "/resources/website-seo-checklist",
    }}
    list={[
      "Are there any broken links, 404 errors, or redirect chains?",
      "Is your XML sitemap submitted and error-free?",
      "Are headers (H1–H3) structured for clarity and SEO?",
      "Is there a dedicated page explaining training costs in plain language?",
    ]}
  />
</BaseLayout>
