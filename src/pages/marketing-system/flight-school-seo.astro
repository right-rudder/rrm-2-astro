const heroData = {
  image: {
    src: "/src/assets/1981-digital-oMe_FjZnHGU-unsplash.jpg",
    alt: "Right Rudder Marketing Flight School SEO ",
  },
  uppertitle: "Dominate your local market",
  title: "Search Engine Optimization for Flight Schools",
  subTitle:
    "Get more student pilots by ranking higher on Google with our proven SEO strategies tailored for flight schools. People are searching for flight training near them – make sure your school is the first they see!",
};
---

<BaseLayout
  siteTitle={pageTitle}
  siteDescription={pageDescription}
  keywords={enhancedKeywords}
>
  <!-- Schema markup for enhanced SEO -->
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  <script
    type="application/ld+json"
    set:html={JSON.stringify(breadcrumbSchema)}
  />

  <!-- HEADER -->
  <HeroScreen data={heroData} />

  <Content data={whatsSeo} />

  <CtaSimpleCenter
    heading="Do you have the right keywords for your market?"
    description="Unlock the potential of your flight school with targeted keywords that attract the right students. Our Free Keyword Research Guide reveals the top keywords specific to your local market, helping you optimize your website and advertising campaigns for maximum visibility and enrollment growth."
    buttons={[
      {
        text: "Download the Guide",
        href: "/resources/flight-school-keyword-research-guide",
      },
    ]}
  />

  <Cta2Cols
    img={{
      src: "/src/assets/mael-balland-QRQHIYyIlp8-unsplash.jpg",
      alt: "Instrument panel of a small aircraft",
    }}
    cta={{
      heading: "Is your website optimize for SEO?",
      description: `Technical SEO is the foundation for higher search rankings. <strong>Our Website & SEO Performance Checklist</strong> ensures your flight school website is fully optimized to rank higher on Google and attract more student pilots.`,
      btnText: "Download our SEO Checklist",
      btnHref: "/resources/website-seo-checklist",
    }}
    list={[
      "Are there any broken links, 404 errors, or redirect chains?",
      "Is your XML sitemap submitted and error-free?",
